

<div class = "d-flex justify-content-between align-items-center bg-light p-3 border-bottom mb-2">
<a href ="/articles" class="text-decoration-none text-secondary">Wikinimous</a>
<span><%=link_to "New article", new_article_path(Article.new), class: "text-decoration-none text-secondary"%></span>
</div>
<div class = "container-xl">


<div>
  <h1 class= "border-bottom py-4 text-center"><%=@article.title%>
    <span>
      <%= link_to edit_article_path(@article), class: "text-decoration-none" do%>
        <i class="fa-regular fa-pen-to-square text-black px-2 link-style-none fa-2xs"></i>
      <%end%>
    </span>
    <span>
      <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none" do%>
          <i class = "fa-regular fa-trash-can text-black fa-2xs"></i>
      <%end%>
    </span>
  </h1>
</div>
<p><%=@article.content%></p>